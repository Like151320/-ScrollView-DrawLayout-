<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!--自定义Toolbar-->
    <declare-styleable name="TitleBar">
        <attr name="title_text" format="reference|string" />
        <attr name="title_text_color" format="reference|color" />
        <attr name="title_text_size" format="reference|dimension" />
        <attr name="title_visible" format="boolean" />

        <attr name="left_text" format="reference|string" />
        <attr name="left_text_color" format="reference|color" />
        <attr name="left_text_size" format="reference|dimension" />
        <attr name="left_text_drawable" format="reference" />
        <attr name="left_drawable_padding" format="reference|dimension" />
        <attr name="left_text_visible" format="boolean" />

        <attr name="right_text" format="reference|string" />
        <attr name="right_text_color" format="reference|color" />
        <attr name="right_text_size" format="reference|dimension" />
        <attr name="right_text_drawable" format="reference" />
        <attr name="right_drawable_padding" format="reference|dimension" />
        <attr name="right_text_visible" format="boolean" />
    </declare-styleable>
</resources>